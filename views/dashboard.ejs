<%- include("partials/header") -%>
<h1>Welcome <%= name %> </h1>
<div class="divider black"></div>
<h3>
    <p>Here are your questions.</p>
</h3>


<% if (questions.length) { %>

<table class="striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        <% questions.forEach(function(question){ %>
        <tr>
            <td>
                <a href="/questions/<%= question._id %>"></a> <%= question.title %>
            </td>
            <td>
                <%= question.createdAt %>
            </td>
            <td></td>
        </tr>
        <% }) %>
    </tbody>
</table>

<% } else { %>
<p>You have not posted any questions yet.</p>
<% } %>
<%- include("partials/footer") -%>